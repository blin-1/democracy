<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <!--
        Added the constraints for entity Position.
    -->
    <changeSet id="20230816193139-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="candidate_id"
                                 baseTableName="positions"
                                 constraintName="fk_positions__candidate_id"
                                 referencedColumnNames="id"
                                 referencedTableName="candidates"
                                 />

        <addForeignKeyConstraint baseColumnNames="issue_id"
                                 baseTableName="positions"
                                 constraintName="fk_positions__issue_id"
                                 referencedColumnNames="id"
                                 referencedTableName="issues"
                                 />
    </changeSet>
</databaseChangeLog>
